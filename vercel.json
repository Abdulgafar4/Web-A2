{
  "version": 2,
  "builds": [
    {
      "src": "public/css/tailwind.css",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public/css"
      }
    },
    {
      "src": "server.cjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.cjs"
    }
  ],
  "scripts": {
    "build": "npm run build"
  }
}
